<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="119dp"
        android:layout_height="40dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle"
        app:srcCompat="@drawable/walmartlogo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="47dp"
        android:layout_marginLeft="110dp"
        android:text="@string/registerHeader"
        android:textColor="@android:color/black"
        android:textSize="19sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="55sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/lightrectangle"
        android:layout_below="@+id/textView1">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="30dp"
            android:text="@string/requiredField"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="@string/firstName"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_below="@+id/textView2"/>

        <EditText
            android:id="@+id/firstNameTextbox"
            android:layout_width="280dp"
            android:layout_height="37dp"
            android:background="@drawable/rectangle"
            android:inputType="textPersonName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/textView3"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="@string/lastName"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_below="@+id/firstNameTextbox"/>

        <EditText
            android:id="@+id/lastNameTextbox"
            android:layout_width="280dp"
            android:layout_height="37dp"
            android:background="@drawable/rectangle"
            android:inputType="textPersonName"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/textView4"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="@string/email"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_below="@+id/lastNameTextbox"/>

        <EditText
            android:id="@+id/emailAddressTextbox"
            android:layout_width="280dp"
            android:layout_height="37dp"
            android:background="@drawable/rectangle"
            android:inputType="textEmailAddress"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/textView5"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:text="@string/password"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_below="@+id/emailAddressTextbox"/>

        <EditText
            android:id="@+id/passwordbox"
            android:layout_width="280dp"
            android:layout_height="37dp"
            android:background="@drawable/rectangle"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/textView6"/>

        <Button
            android:id="@+id/button"
            android:onClick="onCreateAccountClick"
            android:layout_width="343dp"
            android:layout_height="46dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="30dp"
            android:background="@color/blue"
            android:text="@string/registerButton"
            android:textColor="@color/white"
            android:layout_below="@+id/passwordbox"/>
    </RelativeLayout>
</RelativeLayout>